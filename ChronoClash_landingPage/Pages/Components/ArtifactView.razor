
@if (artifact != null)
{
    <div class="artifact card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <h5 class="card-title">@artifact.Name</h5>
            <img src="/images/@icon" class="artifact_img" alt="...">
            <h6 class="card-subtitle text-muted">@artifact.Size MB</h6>
            <h6 class="card-subtitle text-muted"><b>@artifact.Downloads</b> downloads</h6>
            <a class="btn btn-primary" href=@artifact.URL >Download</a>
        </div>
    </div>
}

@code {
    [Parameter]
    public Artifact? artifact { get; set; }
    private string? icon;

    protected override void OnParametersSet()
    {
        switch (artifact?.GetType())
        {
            case Type t when t == typeof(MacOS):
                icon = "mac_logo.png";
                break;
            case Type t when t == typeof(Windows):
                icon = "windows_logo.png";
                break;
        }
    }
}